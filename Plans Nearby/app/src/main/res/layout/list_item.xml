<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/list_item_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardElevation="4dp"
    card_view:contentPadding="16dp"
    card_view:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/list_item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/test" />

        <TextView
            android:id="@+id/list_item_title"
            android:textColor="#ffffffff"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/list_item_image"
            android:elevation="4dp"
            android:text="Hosted by big tigger"
            android:lines="1"
           android:background="#80000000"/>

        <TextView
            android:id="@+id/list_item_distance"
            android:layout_below="@+id/list_item_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="money making "
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/list_item_category"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/list_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testing distance"
            android:elevation="4dp" />

            <TextView
                android:id="@+id/list_item_date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="test"
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/list_item_image"/>
            <TextView
                android:id="@+id/list_item_price"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="testing date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_date"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>